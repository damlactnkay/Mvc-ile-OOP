@model EntityLayer.Concrete.Login

@{
    ViewData["Title"] = "Giriş Yap";
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Özel stil -->
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .login-container {
            margin-top: 100px;
        }

        .card {
            border-radius: 15px;
            box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.1);
        }

        .card-body {
            background: linear-gradient(135deg, #f8c6d1 0%, #f5a1cc 100%);
        }

        h2 {
            color: #fff;
            font-weight: bold;
        }

        p {
            color: #f1f1f1;
        }

        .form-label {
            color: #fff;
        }

        .form-control {
            border-radius: 10px;
            box-shadow: none;
            border: 1px solid #f5a1cc;
        }

            .form-control:focus {
                border-color: #f7a1cc;
                box-shadow: 0 0 5px rgba(247, 161, 204, 0.5);
            }

        .btn-primary {
            background-color: #f7a1cc;
            border-color: #f7a1cc;
            border-radius: 10px;
            padding: 12px;
        }

            .btn-primary:hover {
                background-color: #f57a9d;
                border-color: #f57a9d;
            }

        .invalid-feedback {
            color: #e74c3c;
        }

        .text-muted {
            color: #dfe6e9;
        }

        .text-primary {
            color: #f7a1cc;
        }

        .text-center a {
            text-decoration: none;
            font-weight: 600;
        }

        .form-check-label {
            color: #fff;
        }
    </style>
</head>

<body>
    <div class="login-container d-flex justify-content-center">
        <div class="card" style="width: 400px;">
            <div class="card-body">
                <!-- Sayfa Başlığı -->
                <div class="text-center mb-4">
                    <h2>@ViewData["Title"]</h2>
                    <p>Hesabınıza giriş yapın</p>
                </div>

                <!-- Giriş Formu -->
                <form asp-action="Login" method="post">
                    <!-- E-posta -->
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">E-posta adresi</label>
                        <input asp-for="Email" class="form-control @((ViewData.ModelState["Email"]?.Errors.Count > 0) ? "is-invalid" : "")" placeholder="E-posta adresinizi girin" />
                        <div asp-validation-for="Email" class="invalid-feedback"></div>
                    </div>

                    <!-- Şifre -->
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Şifre</label>
                        <input asp-for="Password" type="password" class="form-control @((ViewData.ModelState["Password"]?.Errors.Count > 0) ? "is-invalid" : "")" placeholder="Şifrenizi girin" />
                        <div asp-validation-for="Password" class="invalid-feedback"></div>
                    </div>

                    <!-- Beni hatırla -->
                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">Beni hatırla</label>
                    </div>

                    <!-- Giriş Butonu -->
                    <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>

                    <!-- Şifreyi unuttum linki -->
                    <div class="text-center mt-3">
                        <a href="/Account/ForgotPassword" class="text-muted">Şifremi unuttum?</a>
                    </div>
                </form>

                <!-- Kayıt Ol Linki -->
                <div class="text-center mt-4">
                    <p>Hesabınız yok mu? <a href="/Register" class="text-primary">Kayıt ol</a></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Validation Message -->
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

    <!-- Bootstrap 5 JS ve Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>

</html>
